        </pluginManagement>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>cn.eakay</groupId>
                <artifactId>demo-client</artifactId>
                <version>${eakay-demo.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.eakay</groupId>
